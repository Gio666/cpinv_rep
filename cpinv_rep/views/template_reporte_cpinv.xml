<?xml version="1.0"?>
<openerp>
    <data>
        <template id="cpinv_rep.cp_inv" name="Reporte de Inventarios">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page">
                            <h2><t t-esc="o.codigo"></t><t t-esc="o.marca_id.marca"></t></h2>
                            <table class="table table-striped"> <!-- crea una tabla con clase de bootstrap -->
                                <tbody>
                                    <tr>
                                        <td><d>Descripción: </d></td>
                                        <td><t t-esc="o.descripcion"></t></td>
                                    </tr>
                                    <tr>    
                                        <td><d>Ubicación: </d></td>
                                        <td><t t-esc="o.ubicacion"></t></td>
                                    </tr>
                                    <tr>    
                                        <td><d>S/N : </d></td>
                                        <td><t t-esc="o.serial"></t></td>
                                    </tr>
                                    <tr>    
                                        <td><d>P/N : </d></td>
                                        <td><t t-esc="o.parte"></t></td>
                                    </tr>
                                    <tr>    
                                        <td><d>Proveedor : </d></td>
                                        <td><t t-esc="o.proveedor_id.proveedor"></t></td>
                                    </tr>
                                    <tr>    
                                        <td><d>Dirección Proveedor : </d></td>
                                        <td><t t-esc="o.proveedor_id.direccion"></t></td>
                                    </tr>
                                    <tr>    
                                        <td><d>Estado Proveedor : </d></td>
                                        <td><t t-esc="o.proveedor_id.estado_id.estado"></t></td>
                                    </tr>
                                    <tr>    
                                        <td><d>Contacto Proveedor : </d></td>
                                        <td><t t-esc="o.proveedor_id.contacto"></t></td>
                                    </tr>
                                    <tr>    
                                        <td><d>telefono Proveedor : </d></td>
                                        <td><t t-esc="o.proveedor_id.tel_fijo"></t></td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>
