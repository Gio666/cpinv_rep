<?xml version="1.0"?>
<openerp>
    <data>
        <template id="cpinv_rep.cp_inv" name="Reporte de Inventarios">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                        <div class="page">
                            <h1>Reporte de Inventarios</h1>
                            <table class="table table-striped"> <!-- crea una tabla con clase de bootstrap -->
                                <thread>
                                    <tr>
                                        <th>Código</th>
                                        <th>Marca</th>
                                        <th>Descripción</th>
                                        <th>Ubicación</th>
                                    </tr>
                                </thread>
                                <tbody>
                                     <tr>
                                        <td><t t-esc="o.codigo"></t></td>
                                        <td><t t-esc="o.marca_id.marca"></t></td>
                                        <td><t t-esc="o.descripcion"></t></td>
                                        <td><t t-esc="o.ubicacion"></t></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>
